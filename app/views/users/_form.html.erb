<div class="form-group">
  <%= form.label :email, class: 'sr-only' %>
  <%= form.email_field :email, id: :user_email, class: 'form-control', placeholder: 'Email' %>
</div>

<div class="form-group">
  <%= form.label :password, class: 'sr-only' %>
  <%= form.password_field :password, id: :user_password, class: 'form-control', placeholder: 'Password' %>
</div>

<div class="form-group">
  <%= form.label :password_confirmation, class: 'sr-only' %>
  <%= form.password_field :password_confirmation, id: :user_password_confirmation, class: 'form-control', placeholder: 'Confirm password' %>
</div>

<div class="form-group">
  <%= form.label :name, class: 'sr-only' %>
  <%= form.text_field :name, id: :user_name, class: 'form-control', placeholder: 'Name' %>
</div>

<% unless action_name == 'new' %>
  <div class="form-group">
    <%= form.label :avatar %><br>
    <% if @user.avatar? %>
      <p>
      <%= image_tag @user.avatar_url, class: "img-circle pm-profile-avatar" if @user.avatar? %>
      <%= form.check_box :remove_avatar %> Remove image
      </p>
    <% end %>
    <%= form.file_field :avatar, id: :user_avatar, accept: 'image/jpeg, image/png, image/gif' %>
    <%= form.hidden_field :avatar_cache %>
  </div>
<% end %>

<div class="form-group">
  <%= form.label :description, "About", class: 'sr-only' %>
  <%= form.text_area :description, id: :user_description, class: 'form-control', placeholder: 'About', rows: 5 %>
</div>

