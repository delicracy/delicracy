<h1>Forgot Password</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with scope: :reset_password, url: reset_password_index_path, local: true do |form| %>

      <div class="form-group">
        <%= form.label :email, class: "sr-only" %>
        <%= form.email_field :email, id: 'reset_password_email', class: 'form-control', placeholder: 'Email' %>
      </div>
      <%= form.submit "Submit", class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>
