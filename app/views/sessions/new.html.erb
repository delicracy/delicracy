<% content_for :navbar do %>
  <%= render 'layouts/navbar_detail', title_bar: 'Sign In' %>
<% end %>

<div class="spacer"></div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with scope: :session, url: login_path, local: true do |form| %>

      <div class="form-group">
        <%= form.label :email, class: "sr-only" %>
        <%= form.email_field :email, id: 'session_email', class: 'form-control', placeholder: 'Email' %>
      </div>

      <div class="form-group">
        <%= form.label :password, class: "sr-only" %>
        <%= form.password_field :password, id: :session_password, class: 'form-control', placeholder: 'Password' %>
      </div>

      <%= form.submit "Sign in", class: 'btn btn-primary btn-block btn-lg' %>
    <% end %>

    <br>
    <%= link_to "/auth/facebook", class: 'btn btn-block btn-lg btn-social btn-facebook' do %>
      <%= fa_icon "facebook", text: "Sign in with Facebook" %>
    <% end %>
    <%= link_to "/auth/kakao", class: 'btn btn-block btn-lg btn-social btn-kakao' do %>
      <%= image_tag "icon_kakao.png" %> Sign in with Kakao
    <% end %>

    <div class="spacer"></div>
    <div class="spacer"></div>
    <%= link_to "Sign up", signup_path, class: "btn btn-default btn-block btn-lg" %>
    <%#= link_to "Forgot password", new_reset_password_path, class: "txt-link" %>
  </div>
</div>
